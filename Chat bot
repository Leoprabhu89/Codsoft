import random

def chatbot():
    print("Hello! I am ChatBot 🤖. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()

        if user_input == "bye":
            print("ChatBot: Goodbye! Have a great day! 👋")
            break

        elif 'hello' in user_input or 'hi' in user_input:
            print("ChatBot: Hello! How can I help you? 😊")

        elif 'where are you from' in user_input:
            print("ChatBot: I live in the digital world 🌐, always ready to talk with you.")   

        elif 'your name' in user_input:
            print("ChatBot: I'm ChatBot, your virtual assistant 🤖.")

        elif 'who made you' in user_input or 'creator' in user_input:
            print("ChatBot: I was created by a developer to chat and assist you! 👨‍💻")

        elif 'motivate me' in user_input or 'motivation' in user_input:
            print("ChatBot: Believe in yourself 💪. Every expert was once a beginner!")

        elif 'help' in user_input or "support" in user_input:
            print("ChatBot: Sure, I can help you. Please tell me your issue.")

        elif 'thanks' in user_input or 'thank you' in user_input:
            print("ChatBot: You're welcome! 🙌")


        elif 'joke' in user_input:
            jokes = [
                "Why don’t programmers like nature? Too many bugs 🐞.",
                "Why did the computer go to the doctor? Because it caught a virus 💻🤒.",
                "Why was the math book sad? Because it had too many problems ➗➕."
            ]
            print("ChatBot: " + random.choice(jokes))


        elif 'weather' in user_input:
            print("ChatBot: I can’t check live weather, but I hope it’s sunny and nice where you are 🌤.")


        elif 'study' in user_input or 'exam' in user_input:
            print("ChatBot: Stay consistent 📚. Revise daily, take breaks, and believe in yourself. You’ll do great!")

        elif 'health' in user_input or 'fitness' in user_input:
            print("ChatBot: Drink water 💧, eat healthy 🍎, and exercise regularly 🏃.")


        elif 'music' in user_input:
            print("ChatBot: Music refreshes the soul 🎶. What’s your favorite song?")

        elif 'programming' in user_input or 'coding' in user_input:
            print("ChatBot: Programming is all about practice! Start small, build projects, and keep learning 👨‍💻.")


        elif 'friend' in user_input or 'friendship' in user_input:
            print("ChatBot: Friends are the family we choose ❤. Always value good friends.")

        else:
            print("ChatBot: I'm not sure how to respond to that 🤔. Try asking something else or type 'help'.")

# Run the chatbot
chatbot()
